@model medical_offices.Models.Entities.Appointment
@{
    ViewBag.Title = "New";
}

<div class="container text-dark mt-5 pt-5 pb-3">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header text-center">
                    Make An Appointment
                </div>
                <div class="card-body">
                    <p>To:</p>
                    <p>@Model.MedicalOffice.Name</p>
                    <hr />

                    @using (Html.BeginForm(actionName: "New", controllerName: "Appointment", method: FormMethod.Post))
                    {
                        @Html.HiddenFor(a => a.MedicalOffice.MedicalOfficeId)

                        @Html.LabelFor(a => a.Date, "Date:")
                        @Html.TextBoxFor(a => a.Date, null, new { type = "datetime-local", @class = "form-control mb-3" })
                        @Html.ValidationMessageFor(a => a.Date, "", new { @class = "text-danger" })
                        <hr />

                        <button class="btn btn-primary btn-block" type="submit">Done!</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>