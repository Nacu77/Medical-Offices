@model medical_offices.Models.Entities.Appointment
@{
    ViewBag.Title = "Details";
}

<div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-md-8 offset-2">
            <div class="card text-center text-dark">
                <div class="card-header">Appointment</div>
                <div class="card-body">
                    @Html.Label("Date", "Date:")
                    <p>@Model.Date</p>
                    <hr />

                    @Html.Label("MedicalOffice", "To:")
                    <p>@Model.MedicalOffice.Name</p>
                    <hr />

                    @Html.ActionLink("Edit Appointment", "Edit", new { id = Model.AppointmentId }, new { @class = "btn btn-warning btn-block" })
                    @using (Html.BeginForm(actionName: "Delete", controllerName: "Appointment", method: FormMethod.Post, routeValues: new { id = Model.AppointmentId }))
                    {
                        @Html.HttpMethodOverride(HttpVerbs.Delete)
                        <button class="btn btn-danger btn-block" type="submit">Cancel Appointment</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>