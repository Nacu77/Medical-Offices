@{
    ViewBag.Title = "Index";
}

<div class="container mt-5 pt-5">
    @Html.ActionLink("Add New Service", "New", null, new { @class = "btn btn-success btn-block mb-5" })

    <div class="card">
        <div class="card-body">
            @foreach (var service in ViewBag.Services)
            {
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        @using (Html.BeginForm(actionName: "Details", controllerName: "Service", method: FormMethod.Get, routeValues: new { id = service.ServiceId }))
                        {
                            <button class="btn btn-outline-primary btn-block" type="submit">@service.Name</button>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
    
</div>