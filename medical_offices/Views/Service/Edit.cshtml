@model medical_offices.Models.Entities.Service
@{
    ViewBag.Title = "Edit";
}

<div class="container text-dark mt-5 pt-5 pb-3">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header text-center">
                    Edit The Service
                </div>
                <div class="card-body">
                    @using (Html.BeginForm(actionName: "Edit", controllerName: "Service"))
                    {
                        @Html.HttpMethodOverride(HttpVerbs.Put)
                        @Html.HiddenFor(service => service.ServiceId)

                        @Html.Label("Name", "Name:")
                        @Html.Editor("Name", new { htmlAttributes = new { @class = "form-control mb-3" } })
                        @Html.ValidationMessage("Name", "", new { @class = "text-danger" })

                        <button class="btn btn-warning btn-block" type="submit">Update</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>