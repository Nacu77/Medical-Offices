@model medical_offices.Models.Entities.Address
@{
    ViewBag.Title = "Details";
}

<div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-md-8 offset-2">
            <div class="card text-center text-dark">
                <div class="card-header">Appointment</div>
                <div class="card-body">
                    @Html.Label("Country", "Country:")
                    <p>@Model.Country</p>
                    <hr />

                    @Html.Label("City", "City:")
                    <p>@Model.City</p>
                    <hr />

                    @Html.Label("Street", "Street:")
                    <p>@Model.Street</p>
                    <hr />

                    @Html.Label("Number", "Number:")
                    <p>@Model.Number</p>
                    <hr />

                    @if (ViewBag.MedicalOffice != null)
                    {
                        <p>Medical Office:</p>
                        <p>@ViewBag.MedicalOffice.Name</p>
                        <hr />
                    }
                    else
                    {
                        <p>No Medical Office Associated</p>
                        <hr />
                    }

                    @Html.ActionLink("Change Address", "Edit", new { id = Model.AddressId }, new { @class = "btn btn-warning btn-block" })
                    @using (Html.BeginForm(actionName: "Delete", controllerName: "Address", method: FormMethod.Post, routeValues: new { id = Model.AddressId }))
                    {
                        @Html.HttpMethodOverride(HttpVerbs.Delete)
                        <button class="btn btn-danger btn-block" type="submit">Delete Address</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>