@{
    ViewBag.Title = "All Addresses";
}

<div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-md-8 offset-2">
            <div class="card text-center text-dark">
                <div class="card-header">@ViewBag.Title</div>
                <div class="card-body">
                    @foreach (var address in ViewBag.Addresses)
                    {
                        using (Html.BeginForm(actionName: "Details", controllerName: "Address", method: FormMethod.Get, routeValues: new { id = address.AddressId }))
                        {
                            <button class="btn btn-info btn-block mb-1">@address.Country, @address.City, @address.Street @address.Number</button>
                        }
                    }
                    @Html.ActionLink("New Address", "New", null, new { @class = "btn btn-success btn-block mt-5" })
                </div>
            </div>
        </div>
    </div>
</div>