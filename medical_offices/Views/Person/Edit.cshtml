@model medical_offices.Models.Entities.Person
@{
    ViewBag.Title = "Edit";
}

<div class="container text-dark mt-5 pt-5 pb-3">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header text-center">
                    Change A Person
                </div>
                <div class="card-body">
                    @using (Html.BeginForm(actionName: "Edit", controllerName: "Person"))
                    {
                        @Html.HttpMethodOverride(HttpVerbs.Put)
                        @Html.HiddenFor(p => p.PersonId)

                        @Html.Label("FirstName", "First Name:")
                        @Html.Editor("FirstName", new { htmlAttributes = new { @class = "form-control mb-3" } })
                        @Html.ValidationMessage("FirstName", "", new { @class = "text-danger" })
                        <hr />

                        @Html.Label("LastName", "Last Name:")
                        @Html.Editor("LastName", new { htmlAttributes = new { @class = "form-control mb-3" } })
                        @Html.ValidationMessage("LastName", "", new { @class = "text-danger" })
                        <hr />

                        <button class="btn btn-warning btn-block" type="submit">Change</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>