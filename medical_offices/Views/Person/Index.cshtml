@{
    ViewBag.Title = "People";
}

<div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-md-8 offset-2">
            <div class="card text-center text-dark">
                <div class="card-header">@ViewBag.Title</div>
                <div class="card-body">
                    @foreach (var person in ViewBag.People)
                    {
                        using (Html.BeginForm(actionName: "Details", controllerName: "Person", method: FormMethod.Get, routeValues: new { id = person.PersonId }))
                        {
                            <button class="btn btn-info btn-block mb-1">@person.FirstName @person.LastName</button>
                        }
                    }
                    @Html.ActionLink("New Person", "New", null, new { @class = "btn btn-success btn-block mt-5" })
                </div>
            </div>
        </div>
    </div>
</div>